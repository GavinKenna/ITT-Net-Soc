@model IEnumerable<ITTNetSoc.Models.NewsItem>

@{
    ViewBag.Title = "Index";
   
    Layout = "~/Views/Shared/M/_Layout.cshtml";
}

@using PagedList.Mvc;
@using PagedList;


@foreach (var item in ViewBag.pageOfResults)

{
    <div data-role="collapsible">
        <h2>@item.Headline</h2>
        <p id="newsBody">@item.Summary</p>
        <p id="newsAuthor">@item.Author</p>
        <p data-role="navbar" >@Html.ActionLink("More Info", "Details", new {    id= item.Id    })</p>
    </div>    
}


<div data-role="navbar">
@Html.PagedListPager((IPagedList)ViewBag.pageOfResults, page => Url.Action("SearchNews", new { page = page, ViewBag.searchString}), PagedListRenderOptions.Minimal)
</div>