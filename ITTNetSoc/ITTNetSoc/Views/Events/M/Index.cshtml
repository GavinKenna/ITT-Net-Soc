@model IEnumerable<ITTNetSoc.Models.Event>
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/M/_Layout.cshtml";
}
@using PagedList.Mvc;
@using PagedList;
<h2>
    Events
</h2>
@foreach (var item in ViewBag.pageOfEvents)
{
    <div data-role="collapsible" data-collapsed="true">
        <h3>
            @item.EventName
        </h3>
        <div id="eventItem">
            <p>Posted By <a href='UserProfile/Details/@item.AuthorID'>@item.Author</a></p>
            <p>@item.Body</p>
            <div data-role="navbar">
                @Html.ActionLink("More Info", "Details", new { id = item.Id})
            </div>
        </div>
    </div>
}
<div data-role="navbar">
    @Html.PagedListPager((IPagedList)ViewBag.pageOfEvents, page => Url.Action("Index", new { page = page }), PagedListRenderOptions.Minimal);
</div>