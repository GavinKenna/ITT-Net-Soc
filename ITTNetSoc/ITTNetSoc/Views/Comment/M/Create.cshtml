@model ITTNetSoc.Models.Comments

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/M/_Layout.cshtml";
}

<h2>Create</h2>

@{
int itemID = int.Parse(Request.QueryString["itemID"]);
string commentType = Request.QueryString["commentType"];
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Comments</legend>
        <br />

        <input type="hidden" id="itemID" name="itemID" value=@itemID /> <!--Quick hack to get the value passed. -->
        <input type="hidden" id="commentType" name="commentType" value=@commentType /> <!--Quick hack to get the value passed. -->

        <div class="editor-label">
            @Html.LabelFor(model => model.title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.body)
            @Html.ValidationMessageFor(model => model.body)
        </div>
        
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
        <a href=@Request.UrlReferrer >Back</a>
</div>
