@model ITTNetSoc.Models.Album
@{
    ViewBag.Title = "AddAlbum";
   // Layout = "_AddAlbumLayout.cshtml";
    Layout = "~/Views/Shared/M/_Layout.cshtml";
}

 
<div data-theme="b">

<h2>Create Album</h2>
<p>
    Please enter in all details
</p>

@Html.ValidationSummary(true, "Try Again.")
<div data-role="fieldcontain">
@using (Html.BeginForm()) {
 
        <fieldset data-role="controlgroup">
            <legend>Album Information</legend>
    
           
                @Html.LabelFor(m => m.AlbumName)
                @Html.TextBoxFor(m => m.AlbumName, new { required="required",placeHolder="Album Name"})
                @Html.ValidationMessageFor(m => m.AlbumName)
          <br>
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { required = "required", placeHolder = "Description" })
                @Html.ValidationMessageFor(m => m.Description)

                <br>
               
          <input type="submit" value="Add Album" title = "Create!" />
        </fieldset>
   
		
 
   
}
</div>

</div>
@section scripts
{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}





